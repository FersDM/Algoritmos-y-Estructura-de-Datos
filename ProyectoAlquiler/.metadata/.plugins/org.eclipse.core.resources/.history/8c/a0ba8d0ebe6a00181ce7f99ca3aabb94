	private int anchoColumna(int porcentaje) {
		return porcentaje * scrollPane.getWidth() / 100;
	}
	private void ajustarAnchoColumnas() {
		TableColumnModel tcm = tblCliente.getColumnModel();
		tcm.getColumn(0).setPreferredWidth(anchoColumna( 8));  // codigo
		tcm.getColumn(1).setPreferredWidth(anchoColumna( 8));  // nombres
		tcm.getColumn(2).setPreferredWidth(anchoColumna( 8));  // ApePat
		tcm.getColumn(3).setPreferredWidth(anchoColumna( 8));  // ApeMat
		tcm.getColumn(4).setPreferredWidth(anchoColumna(10));  // Direccion
		tcm.getColumn(5).setPreferredWidth(anchoColumna( 8));  // Fecha nacimiento
		tcm.getColumn(6).setPreferredWidth(anchoColumna( 8));  // Fecha afiliación
		tcm.getColumn(7).setPreferredWidth(anchoColumna( 8));  // Estado civil
		tcm.getColumn(8).setPreferredWidth(anchoColumna( 8));  // Telefono
		tcm.getColumn(9).setPreferredWidth(anchoColumna( 8));  // Dni
		tcm.getColumn(10).setPreferredWidth(anchoColumna( 8)); // Usuario
		tcm.getColumn(11).setPreferredWidth(anchoColumna(10));// Contrasenia		
	}
	public void actionPerformed(ActionEvent arg0) {
		if (arg0.getSource() == btnAceptar) {
			actionPerformedBtnAceptar(arg0);
		}
		if (arg0.getSource() == btnGrabar) {
			actionPerformedBtnGrabar(arg0);
		}
		if (arg0.getSource() == btnEliminar) {
			actionPerformedBtnEliminar(arg0);
		}
		if (arg0.getSource() == btnModificar) {
			actionPerformedBtnModificar(arg0);
		}
		if (arg0.getSource() == btnIngresar) {
			actionPerformedBtnIngresar(arg0);
		}
	}
	protected void actionPerformedBtnIngresar(ActionEvent arg0) {
		btnIngresar.setEnabled(false);
		btnModificar.setEnabled(true);
		btnAceptar.setEnabled(true);
		limpieza();
		txtCodigo.setText("" + ac.codigoCorrelativo());
		habilitarEntradas(true);
		txtNombres.requestFocus();
	}
	protected void actionPerformedBtnModificar(ActionEvent arg0) {
		btnIngresar.setEnabled(true);
		btnModificar.setEnabled(false);
		if (ac.tamaño() == 0) {
			btnAceptar.setEnabled(false);
			habilitarEntradas(false);
			Alerta.mensaje(this, "No existen empleados");	
		}
		else {
			btnAceptar.setEnabled(true);
			habilitarEntradas(true);
			editarFila();
			txtNombres.requestFocus();
		}
	}
	protected void actionPerformedBtnEliminar(ActionEvent arg0) {
		btnIngresar.setEnabled(true);
		btnModificar.setEnabled(true);
		btnAceptar.setEnabled(false);
		if (ac.tamaño() == 0)
			Alerta.mensaje(this, "No existen clientes");
		else {
			int ok = Alerta.confirmar(this, "¿ Desea eliminar el registro ?");
			if (ok == 0) {
				ac.eliminar(ac.buscar(leerCodigo()));
				listar();
				editarFila();
			}
		}
	}
	protected void actionPerformedBtnGrabar(ActionEvent arg0) {
		btnIngresar.setEnabled(true);
		btnModificar.setEnabled(true);
		btnAceptar.setEnabled(false);
		if (ac.existeArchivo()) {
			int ok = Alerta.confirmar(this, "¿ Desea actualizar \"" + ac.getArchivo() + "\" ?");
			if (ok == 0) {
				ac.grabarClientes();
				Alerta.mensaje(this, "\"" + ac.getArchivo() + "\" ha sido actualizado");
			}
			else
				Alerta.mensaje(this, "No se actualizó  \"" + ac.getArchivo() + "\"");
		}
		else {
			ac.grabarClientes();
			Alerta.mensaje(this, "\"" + ac.getArchivo() + "\" ha sido creado");
		}
	}
	public void mouseClicked(MouseEvent arg0) {
		if (arg0.getSource() == tblCliente) {
			mouseClickedTblCliente(arg0);
		}
	}
	public void mouseEntered(MouseEvent arg0) {
	}
	public void mouseExited(MouseEvent arg0) {
	}
	public void mousePressed(MouseEvent arg0) {
	}
	public void mouseReleased(MouseEvent arg0) {
	}
	protected void mouseClickedTblCliente(MouseEvent arg0) {
		habilitarEntradas(false);
		habilitarBotones(true);
		editarFila();
	}
	protected void actionPerformedBtnAceptar(ActionEvent arg0) {
		int codigo = leerCodigo();
		String nombres = leerNombres();
		if (nombres.length() > 0) {
			String apePat = leerApePat();
			if (apePat.length() > 0) {
				String apeMat = leerApeMat();
				if (apeMat.length() > 0) {
					String direccion = leerDireccion();
					if (direccion.length() > 0) {
						String fechaNacimiento = leerFechaNacimiento(),
							   fechaAfiliacion = leerFechaAfiliacion();
						int estadoCivil = leerEstadoCivil();
						String telefono = leerTelefono();
						if (telefono.length() > 0) {
							String dni = leerDni();
							if (dni.length() > 0) {
								String usuario = leerUsuario();
								if (usuario.length() > 0) {
									String contrasenia = leerContrasenia();
									if (contrasenia.length() > 0) {
										if (btnIngresar.isEnabled() == false) {
											Cliente nuevo = new Cliente(codigo, nombres, apePat, apeMat, 
									                                    direccion, fechaNacimiento, 
									                                    fechaAfiliacion, estadoCivil,
									                                    telefono, dni, usuario, contrasenia);
											ac.adicionar(nuevo);
											btnIngresar.setEnabled(true);
										}
										if (btnModificar.isEnabled() == false) {
											Cliente x = ac.buscar(codigo);
											x.setNombres(nombres);
											x.setApePat(apePat);
											x.setApeMat(apeMat);
											x.setDireccion(direccion);
											x.setFechaNacimiento(fechaNacimiento);
											x.setFechaAfiliacion(fechaAfiliacion);
											x.setEstadoCivil(estadoCivil);
											x.setTelefono(telefono);
											x.setDni(dni);
											x.setUsuario(leerUsuario());
											x.setContrasenia(leerContrasenia());
											btnModificar.setEnabled(true);
										}	
										listar();
										habilitarEntradas(false);
									}
									else {
										Alerta.mensaje(this, "Ingrese CONTRASEÑA correcta");
										pswContrasenia.setText("");
										pswContrasenia.requestFocus();
									}
								}	
								else {
									Alerta.mensaje(this, "Ingrese USUARIO correcto");
									txtUsuario.setText("");
									txtUsuario.requestFocus();
								}
							}
							else {
								Alerta.mensaje(this, "Ingrese DNI correcto");
								txtDni.setText("");
								txtDni.requestFocus();
							}
						}
						else {
							Alerta.mensaje(this, "Ingrese TELEFONO correcto");
							txtTelefono.setText("");
							txtTelefono.requestFocus();
						}
					}
					else {
						Alerta.mensaje(this, "Ingrese DIRECCIÓN correcta");
						txtDireccion.setText("");
						txtDireccion.requestFocus();
					}
				}
				else {
					Alerta.mensaje(this, "Ingrese APELLIDO MATERNO correcto");
					txtApeMat.setText("");
					txtApeMat.requestFocus();
				}
			}
			else {
				Alerta.mensaje(this, "Ingrese APELLIDO PATERNO correcto");
				txtApePat.setText("");
				txtApePat.requestFocus();
			}
		}
		else {
			Alerta.mensaje(this, "Ingrese NOMBRES correctos");
			txtNombres.setText("");
			txtNombres.requestFocus();
		}
	}
	void listar() {
		Cliente x;
		int posFila = 0;
		if (modelo.getRowCount() > 0)
			posFila = tblCliente.getSelectedRow();
		if (modelo.getRowCount() == ac.tamaño()-1)
			posFila = ac.tamaño()-1;
		if (posFila == ac.tamaño())
			posFila --;
		modelo.setRowCount(0);
		for (int i=0; i<ac.tamaño(); i++) {
			x = ac.obtener(i);
			Object[] fila = { x.getCodigo(), 
						      x.getNombres(),
						      x.getApePat(),
						      x.getApeMat(),
						      x.getDireccion(),
						      x.getFechaNacimiento(),
						      x.getFechaAfiliacion(),
						      x.detalleEstadoCivil(),
						      x.getTelefono(),
						      x.getDni(),
						      x.getUsuario(),
						      x.getContrasenia() };
			modelo.addRow(fila);
		}
		if (ac.tamaño() > 0)
			tblCliente.getSelectionModel().setSelectionInterval(posFila, posFila);
	}
	void limpieza() {
		txtCodigo.setText("");
		txtNombres.setText("");
		txtApePat.setText("");
		txtApeMat.setText("");
		txtDireccion.setText("");
		Fecha.setFecha(cboDiaNacimiento, cboMesNacimiento, cboAñoNacimiento);
		Fecha.setFecha(cboDiaAfiliacion, cboMesAfiliacion, cboAñoAfiliacion);
		cboEstadoCivil.setSelectedIndex(0);
		txtTelefono.setText("");
		txtDni.setText("");
		txtUsuario.setText("");
		pswContrasenia.setText("");
	}
	void editarFila() {
		if (ac.tamaño() == 0)
			limpieza();
		else {
			Cliente x = ac.obtener(tblCliente.getSelectedRow());
			txtCodigo.setText("" + x.getCodigo());
			txtNombres.setText(x.getNombres());
			txtApePat.setText(x.getApePat());
			txtApeMat.setText(x.getApeMat());
			txtDireccion.setText(x.getDireccion());
			Fecha.setFecha(cboDiaNacimiento, cboMesNacimiento, cboAñoNacimiento, x.getFechaNacimiento());
			Fecha.setFecha(cboDiaAfiliacion, cboMesAfiliacion, cboAñoAfiliacion, x.getFechaAfiliacion());
			cboEstadoCivil.setSelectedIndex(x.getEstadoCivil());
			txtTelefono.setText(x.getTelefono());
			txtDni.setText(x.getDni());
			txtUsuario.setText(x.getUsuario());
			pswContrasenia.setText(x.getContrasenia());
		}
	}
	void habilitarEntradas(boolean sino) {
		btnAceptar.setEnabled(sino);
		txtNombres.setEditable(sino);
		txtApePat.setEditable(sino);
		txtApeMat.setEditable(sino);
		txtDireccion.setEditable(sino);
		cboDiaNacimiento.setEnabled(sino);
		cboMesNacimiento.setEnabled(sino);
		cboAñoNacimiento.setEnabled(sino);
		cboDiaAfiliacion.setEnabled(sino);
		cboMesAfiliacion.setEnabled(sino);
		cboAñoAfiliacion.setEnabled(sino);
		cboEstadoCivil.setEnabled(sino);
		txtTelefono.setEditable(sino);
		txtDni.setEditable(sino);
		txtUsuario.setEditable(sino);
		pswContrasenia.setEditable(sino);
	}
	void habilitarBotones(boolean sino) {
		btnIngresar.setEnabled(sino);
		btnModificar.setEnabled(sino);
	}
	int leerCodigo() {
		return Integer.parseInt(txtCodigo.getText().trim());
	}
	String leerNombres() {
		return txtNombres.getText().trim();
	}
	String leerApePat() {
		return txtApePat.getText().trim();
	}
	String leerApeMat() {
		return txtApeMat.getText().trim();
	}
	String leerDireccion() {
		return txtDireccion.getText().trim();
	}	
	String leerFechaNacimiento() {
		return Fecha.getFecha(cboDiaNacimiento, cboMesNacimiento, cboAñoNacimiento);
	}	
	String leerFechaAfiliacion() {
		return Fecha.getFecha(cboDiaAfiliacion, cboMesAfiliacion, cboAñoAfiliacion);
	}	
	int leerEstadoCivil() {
		return cboEstadoCivil.getSelectedIndex();
	}
	String leerTelefono() {
		return txtTelefono.getText().trim();
	}
	String leerDni() {
		return txtDni.getText().trim();
	}
	String leerUsuario() {
		return txtUsuario.getText().trim();
	}
	String leerContrasenia() {
		return new String(pswContrasenia.getPassword());	
	}
	
}
